---
import BaseHead from '../../components/BaseHead.astro';
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';
import { SITE_TITLE, SITE_DESCRIPTION } from '../../consts';
import { getCollection } from 'astro:content';
import FormattedDate from '../../components/FormattedDate.astro';

const posts = (await getCollection('blog')).sort(
    (a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf()
);

const products = (await getCollection('software'))
---

<!doctype html>
<html lang="en">
	<head>
		<BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
		<style>

			li {
				display: flex;
				width: 350px;
				padding: 10px;
				background-color: rgba(242, 242, 242, 0.185);
				border-radius: 2px;
				border: 1px solid rgba(235, 235, 235, 0.719);


			}

			main {
				width: 100%;
				height: 40vh;
				


			}
			ul {
        display: flex;
        flex-wrap: wrap;
        justify-content: center; /* Center horizontally */
        padding-inline-start: 0px;
        gap: 10px;
    }


			
			a {
				display: flex;
			}

			img {
				max-width: 100%;
				height: auto;
				border-radius: 4px;
				margin: 0px;
				padding: 0px;
				margin-left: -5px;
				border: 1px solid rgba(169, 169, 169, 0.288);

			}

			.info, h4, p, a, .down {
				margin: 0px;
				font-family: -apple-system, system-ui, BlinkMacSystemFont, "Segoe UI", Roboto, Ubuntu;
				text-decoration: none;
				margin-left: 5px;
			}

			.down {
				color: gray;
				margin-top: 6px;
				font-weight: 300;
				display: flex;
				align-items: center;
				gap: 5px;
			}

			h6 {
				font-weight: 400;
				margin: 0px
			}

			hr {
				background-color: black;
				width: 1px;
				height: 10px;



			}
			.role {

			}

			h4{
				font-size: 14px
			}

			p {
				font-size: 12px
			}

			section {


			}

			h2 {
				font-family: -apple-system, system-ui, BlinkMacSystemFont, "Segoe UI", Roboto, Ubuntu;
				font-size: 15px;
				font-weight: 400;
				color: rgb(0, 0, 0);
			}

			h1 {
				font-family: 'Charter';
				font-size: 25px;

			}

			.sp{
				width: 100%;
				text-align: center;
				height: 200vh;
				align-items: center;
				padding-top: 100px;
			}



		</style>
	</head>
	<body>
		<Header />
		<main>
			<section>

				<div class="sp">
					<h1>hook</h1>
					<h2>Hardware soon</h2>
				</div>
			</section>
		</main>
		<Footer />
	</body>
</html>
